{
  "name": "samote",
  "version": "0.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "set DEV=true && electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "normalped",
  "license": "MIT",
  "description": "An application for remote control",
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "arole": "^1.1.2",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^2.0.0",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "shell-quote": "^1.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ua-parser-js": "^2.0.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "build": {
    "productName": "Samote",
    "appId": "org.samson.Samote",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!src/host/**/*",
      "!src/client/**/*",
      "!src/server/resources/**/*"
    ],
    "extraResources": [
      {
        "from": "src/host/build",
        "to": "../resources/host/build"
      },
      {
        "from": "src/client/build",
        "to": "../resources/client/build"
      },
      {
        "from": "src/server/resources",
        "to": "..",
        "filter": ["!**/*.log"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Samote"
    }
  }
}
